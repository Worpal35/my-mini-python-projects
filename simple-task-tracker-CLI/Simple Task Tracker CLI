print("----Welcome to the task app----")
myTask={}

def checkTask():
    print("\n**All Task Names;**")
    for keys in myTask.keys():
        print(keys)

while(True):
    print("\n Options:")
    print("1.Add Task")
    print("2.Delete Task")
    print("3.Check Task")
    print("3.Exit")
    choice=int(input("Enter numbers 1 between 4: "))
    if choice==1:
        task_name=(str(input("Enter your task name: ")))
        task_time=(float(input("How long will the task be in minutes?: ")))
        myTask[task_name]=task_time
    elif choice==2:
        checkTask()
        while (True):
            delete=str(input("Enter the name of the task to be deleted:"))
            if delete in myTask.keys():
                myTask.pop(f"{delete}")
                break
            elif delete not in myTask.keys():
                print("Task not found, Please enter correctly")
    elif choice==3:
        print(myTask)
    elif choice==4:
        print("See you later...")
        break
    else:
        print("Wrong number,Please enter correctly")
